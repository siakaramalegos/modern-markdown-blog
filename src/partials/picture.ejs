<picture>
  <source
    type="image/webp"
    srcset="./images/300_<%= name %>.webp 300w,
      ./images/600_<%= name %>.webp 600w" />
  <img
    srcset="./images/300_<%= name %> 300w,
      ./images/600_<%= name %> 600w"
    src="./images/600_<%= name %>"
    sizes="(max-width: 320px) 280px,
      (max-width: 640px) 580px,
      1000px"
    alt="<%= alt %>" />
</picture>